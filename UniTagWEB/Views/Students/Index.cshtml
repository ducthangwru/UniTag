@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/data/Data.js"></script>
<h2 style="margin-top:10px;">Danh sách học sinh</h2>
<div id="example" style="margin-top:30px;">
    <div id="grid"></div>
    <script>
        $(document).ready(function () {
            $("#grid").kendoGrid({
                dataSource: {
                    data: datastudent,                    pageSize: 10
                },
                height: 550,
                groupable: {
                    messages: {
                        empty: "Kéo cột vào đây để nhóm "
                    }
                },
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: [5, 10, 15, "Tất cả"],
                    buttonCount: 5,
                    messages: {
                        itemsPerPage: "số học sinh trên trang",
                        display: "Hiển thị {0}-{1} của {2} học sinh",
                        empty: "Không có dữ liệu",
                        allPages: "Hiển thị tất cả",
                        page: "Nhập trang",
                        of: "của {0}",
                        first: "Trang đầu",
                        previous: "Trang trước",
                        next: "Trang kế tiếp",
                        last: "Trang cuối",
                        refresh: "Làm mới"
                    }
                },
                columns: [{
                    template: "<div class='customer-photo'" +
                                    "style='background-image: url(../content/web/Customers/#:data.CustomerID#.jpg);'></div>" +
                                "<div class='customer-name'>#: ContactName #</div>",
                    field: "ContactName",
                    title: "Họ và Tên",
                    width: 240
                }, {
                    field: "ContactTitle",
                    title: "Địa chỉ"
                }, {
                    field: "Address",
                    title: "Mã thẻ RFID"
                }, {
                    field: "CompanyName",
                    title: "Lớp",
                    width: 150
                },
                { command: [{ name: "edit", text: "Sửa" }, { name: "destroy", text: "Xóa" }], title: "Tác vụ", width: "20%" }]
            });
        });
    </script>
</div>

<style type="text/css">
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>
