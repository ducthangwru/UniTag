@{
    ViewBag.Title = "Thông tin checkin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/data/Data.js"></script>
<h2 style="margin-top:10px;">Thông tin điểm danh</h2>
<div id="example" style="margin-top:30px;">
    <div id="grid"></div>

</div>

<script>
        $(document).ready(function () {
            dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                            url: '@Url.Action("DanhSachCheckin", "ReportCheckin")',
                            dataType: 'jsonp',
                            success: function (msg) {
                                console.log(msg);
                                options.success(msg.d);
                            }
                    },
                    create: {
                        
                    },
                    destroy: {
                        success: function (msg) {
                            console.log(msg);
                            options.success(msg.d);
                        },
                        error: function (msg) {
                            console.log(msg);
                        }
                    },
                    parameterMap: function (options, operation) {
                        if (operation !== "read" && options.models) {
                            return { models: kendo.stringify(options.models) };
                        }
                    }
                },
                batch: true,
                pageSize: 10,
                schema: {
                    model: {
                        id: "ID",
                        fields: {
                            ID: { type: "number" },
                            IDPhuHuynh: { type: "number" },
                            TenPhuHuynh: { type: "string" },
                            AnhPhuHuynh: { type: "string" },
                            IDHocSinh: { type: "number" },
                            TenHocSinh: { type: "string" },
                            AnhHocSinh: { type: "string" },
                            IDLop: { type: "number" },
                            TenLop: { type: "string" },
                            CaDuaDon: { type: "number" },
                            TenCa: { type: "string" },
                            IDImage: { type: "number" },
                            AnhChup: { type: "string" },
                            XacNhan: { type: "string" },
                            NgayCheckin: { type: "string" },
                            GioCheckin: { type: "string" }
                        }
                    }
                }
            });


            $("#grid").kendoGrid({
                dataSource: dataSource,
                height: 550,
                groupable: {
                    messages: {
                        empty: "Kéo cột vào đây để nhóm "
                    }
                },
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: [5, 10, 15, "Tất cả"],
                    buttonCount: 5,
                    messages: {
                        itemsPerPage: "số checkin trên trang",
                        display: "Hiển thị {0}-{1} của {2} lượt checkin",
                        empty: "Không có dữ liệu",
                        allPages: "Hiển thị tất cả",
                        page: "Nhập trang",
                        of: "của {0}",
                        first: "Trang đầu",
                        previous: "Trang trước",
                        next: "Trang kế tiếp",
                        last: "Trang cuối",
                        refresh: "Làm mới"
                    }
                },
                columns: [
                    {
                        title: "STT",
                        template: "#= ++record #",
                        width: '4%'
                    },
                    {
                    template: "<div class='customer-photo'" +
                                    "style='background-image: url(#:AnhPhuHuynh#);'></div>" +
                                "<div class='customer-name'>#: TenPhuHuynh #</div>",
                    field: "TenPhuHuynh",
                    title: "Phụ Huynh",
                    width: '20%'
               }, {
                    template: "<div class='customer-photo'" +
                                    "style='background-image: url(#:AnhHocSinh#);'></div>" +
                                "<div class='customer-name'>#: TenHocSinh #</div>",
                    field: "TenHocSinh",
                    title: "Học sinh",
                    width: '20%'
               }, {
                   template: "<div class='customer-photo'" +
                                   "style='background-image: url(#:AnhChup#);'></div>",
                   field: "AnhChup",
                   title: "Ảnh Checkin",
                   width: '10%'
               }, {
                    field: "TenLop",
                    title: "Lớp",
                    width: '10%'
                }, {
                    field: "TenCa",
                    title: "Ca",
                    width: '7%'
                },
                {
                    field: "XacNhan",
                    title: "Trạng Thái",
                    width: '10%'
                },
                {
                    field: "NgayCheckin",
                    title: "Ngày checkin",
                    width: '10%'
                },
                {
                    field: "GioCheckin",
                    title: "Giờ checkin",
                    width: '7%'
                }],
                dataBinding: function () {
                    record = (this.dataSource.page() - 1) * this.dataSource.pageSize();
                }
            });
        });
</script>

<style type="text/css">
    .customer-photo {
        display: inline-block;
        width: 80px;
        height: 100px;
        border-radius: 0%;
        background-size: 80px 100px;
        background-position: center center;
        vertical-align: middle;
        line-height: 100px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>
